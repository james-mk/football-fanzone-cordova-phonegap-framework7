<?xml version='1.0' encoding='utf-8'?>
<widget id="com.insiteskenya.footie" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Football Fan Zone</name>
    <description>
        Keep up-to date with Fixtures, Live Scores And Results, Table Standings and team info about your favourite teams and leagues across Europe
    </description>
    <author email="info@insiteskenya.com" href="http://insiteskenya.com">
        Insites Web Design
    </author>
    <content src="index.html" />
    <!--<access origin="*.pushwoosh.com" /> -->
    <access origin="http://*.football-data.org" />
    <access origin="*.wikimedia.org" />
    <access origin="http://*.insiteskenya.com" />
    <access origin="https://*.admob.com" subdomains="true" />
    <access origin="https://*.google.com" subdomains="true" />
    <access origin="https://www.google.com/admob/" subdomains="true" />
    <!-- <access origin="https://www.football-data.org/" subdomains="true" />-->
    <content src="index.html" />
    <access origin="http://insiteskenya.com/" subdomains="true" />
    <allow-navigation href="http://www.insiteskenya.com/*" />
    <allow-navigation href="https://www.facebook.com/*" />
    <allow-navigation href="https://www.twitter.com/*" />
    <allow-navigation href="https://www.google.com/*" />


    <!--  <allow-intent href="http://example.com/*" />   -->
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <!-- all platforms -->

    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenDelay" value="3500" />
    <preference name="android-installLocation" value="auto" />


    <splash src="res/screens/android/drawable-port-ldpi-screen.png" platform="android" qualifier="ldpi" />
    <splash src="res/screens/android/drawable-port-mdpi-screen.png" platform="android" qualifier="mdpi" />

    <icon src="icon.png" />
    <splash src="splash.png" />




    <plugin name="onesignal-cordova-plugin" spec="^2.4.1" source="npm" />
    <plugin name="phonegap-admob" source="npm" />
    <plugin name="cordova-plugin-x-socialsharing" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />


</widget>
